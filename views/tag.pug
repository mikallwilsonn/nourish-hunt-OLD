extends layout

include mixins/_storeCard

block content
    .inner
        if tag
            h2 ##{tag}
        else 
            h2 #{title}
            p Select a tag to begin browsing by tag.
        ul.tags
            each t in tags
                li.tag
                    a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
                        span.tag__text= t._id
                        span.tag__count= t.count
        
        if tag
            .stores
                each store in stores
                    +storeCard(store)
